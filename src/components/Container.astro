---
import * as CONTENT from "../pages/content"
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
import { Icon } from "astro-icon"

import { blogs, groupBlogsByMonth } from "../content/blogs";
const groupedBlogs = groupBlogsByMonth(blogs);

import { studyNotes } from "../content/studynotes";
---

<ul class="shadow-box">
  <AccordionLayout title={"About"} icon={"mdi:account-badge-outline"}>
    {CONTENT.about}
    <br><br>
    {CONTENT.about_2}
  </AccordionLayout>
    <AccordionLayout title={"Work"} icon={"ic:baseline-work-outline"}>
      {
        CONTENT.work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={item.skills}
              url={item.org_url}
              url_name={item.org}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Projects"} icon={"ion:md-build"}>
      {
        CONTENT.projects.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={`${item.from} - ${item.to}`}
              description={item.description}
              tags={item.tech}
              url={item.url}
              url_name={"Open Project"}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Education"} icon={"carbon:education"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={item.url}
              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Certifications"} icon={"carbon:certificate"}>
      {
        CONTENT.certificates.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.issued}
              description={item.org}
              tags={item.description}
              url={item.url}
              url_name={"View Certificate"}
            />
          );
        })
      }
    </AccordionLayout>

    <!-- <AccordionLayout title={"Blogs"} icon={"carbon:pen"}>
      {
        CONTENT.blogs.map((item) => (
          <div style={{ display: "flex", justifyContent: "space-between", marginBottom: "8px" }}>
            <a href={item.url} style={{ textDecoration: "none", color: "inherit" }}>
              {item.title}
            </a>
            <span style={{ whiteSpace: "nowrap" }}>{item.date}</span>
          </div>
        ))
      }
    </AccordionLayout> -->
     <!-- Blogs Accordion -->
    
  <!-- Example usage (with a new Accordion for Blogs) -->
  <AccordionLayout title="Blogs" icon="carbon:pen">
    {Object.entries(groupedBlogs).map(([month, posts], index) => (
      <div style="margin: 1rem 0;">
        {index > 0 && <hr style="margin-bottom: 0.5rem; border-bottom: 1px solid #444;" />}
  
        <!-- Month Header -->
        <h3 style="font-weight: bold; margin-bottom: 0.5rem; color: #ddd;">
          {month}
        </h3>
  
        {posts.map((item) => (
          <div style="margin-bottom: 16px; padding-bottom: 8px; border-bottom: 1px solid #333;">
            <!-- Title (non-hyperlinked) and "Read Here" link -->
            <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 4px;">
              <span style="font-weight: bold; font-size: 1rem; color: #ddd;">
                {item.title}
              </span>
              <a 
                href={item.url} 
                style="text-decoration: none; font-weight: bold; font-size: 0.9rem; color: #4ea8ed;" 
                target="_blank"
              >
                Read Here
              </a>
            </div>
  
            <!-- Date -->
            <span style="color: #aaa; font-size: 0.85rem;">
              {item.date}
            </span>
          </div>
        ))}
      </div>
    ))}
  </AccordionLayout>

  <AccordionLayout title="Study Notes" icon="carbon:notebook">
    {studyNotes.map((note) => (
      <div style="margin-bottom: 16px; padding-bottom: 16px; border-bottom: 1px solid #444;">
        <!-- Title (non-hyperlinked) and "View on Notion" link -->
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 4px;">
          <span style="font-weight: bold; font-size: 1.1rem; color: #ddd;">
            {note.title}
          </span>
          <a 
            href={note.url} 
            style="text-decoration: none; font-weight: bold; font-size: 0.9rem; color: #4ea8ed;" 
            target="_blank"
          >
            View on Notion
          </a>
        </div>
  
        <!-- Description with optional source link -->
        <p style="margin: 4px 0; color: #aaa; font-size: 0.9rem;">
          {note.description} 
          {note.desc_url && (
            <>
              {" "}
              <a 
                href={note.desc_url} 
                style="color: #4ea8ed; text-decoration: underline;" 
                target="_blank"
              >
                (Source)
              </a>
            </>
          )}
        </p>
      </div>
    ))}
  </AccordionLayout>
  
  

</ul>
