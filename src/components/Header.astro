---
import * as CONTENT from "../pages/content";
---

<!-- Hero section -->
<header class="mx-auto py-8 bg-background text-text dark:bg-background-dark dark:text-text-dark">
  <article
    class="grid grid-cols-3 grid-rows-1 place-items-center w-[98vw] max-w-2xl"
  >
    <!-- Profile Image -->
    <div
      class="rounded-full border-primary self-end shadow-2xl md:w-32 w-28 aspect-square"
    >
      <img
        src="/profile.jpg"
        alt="profile_picture"
        class="object-cover w-full h-full rounded-full grayscale-[50] hover:grayscale-0"
      />
    </div>

    <!-- Name, Designation, and Location -->
    <div class="grid text-center self-center whitespace-nowrap">
      <h1 class="text-3xl text-text dark:text-text-dark">{CONTENT.name}</h1>
      <h3 class="text-lg text-text/90 dark:text-text-dark/90">{CONTENT.designation}</h3>
      <h5 class="text-sm text-text/80 dark:text-text-dark/80">{CONTENT.location}</h5>
    </div>

    <div class="flex flex-col items-center">
      <!-- Icons Section -->
      <div class="flex items-center justify-center gap-6 mb-2">
        <!-- Email Icon -->
        <div class="flex flex-col items-center">
          <a
            href="mailto:jw-jang@outlook.com"
            target="_blank"
            class="rounded-full bg-gray-200 dark:bg-gray-700 shadow-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-all flex items-center justify-center"
            style="width: 40px; height: 40px;"
            aria-label="Email"
          >
            <img
              src="/icons/email_small.svg"
              alt="Email Icon"
              class="w-5 h-5 object-contain"
            />
          </a>
          <span class="text-xs text-gray-800 dark:text-gray-200 mt-1">Email</span>
        </div>
    
        <!-- Bluesky Icon -->
        <div class="flex flex-col items-center">
          <a
            href="https://bsky.app/profile/jaylovesboba.bsky.social"
            target="_blank"
            class="rounded-full bg-gray-200 dark:bg-gray-700 shadow-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-all flex items-center justify-center"
            style="width: 40px; height: 40px;"
            aria-label="Bluesky"
          >
            <img
              src="/icons/bluesky.svg"
              alt="Bluesky Icon"
              class="w-5 h-5 object-contain"
            />
          </a>
          <span class="text-xs text-gray-800 dark:text-gray-200 mt-1">Bluesky</span>
        </div>
      </div>
    
      <!-- Website Link -->
      <a
        href={CONTENT.website}
        target="_blank"
        class="text-sm text-text/80 dark:text-text-dark/80 hover:text-blue-500 dark:hover:text-blue-300 mt-2"
      >
        {CONTENT.website}
      </a>
    </div>
    
    

    <!-- Full-Width Paragraph -->
    <div class="col-span-3 w-full text-center md:text-left">
      <h1 class="intro-heading pt-4 text-2xl font-medium leading-relaxed text-text/90 dark:text-text-dark/90">
        Hello! You can call me Jay.<br />
        <span class="highlight">I am a Researcher</span>, <span class="highlight">Systems Security Enthusiast</span>, 
        and <span class="highlight">Cyber Engineer</span> at 
        <a 
          target="_blank"
          href="https://www.mitre.org/who-we-are"
          class="text-blue-500 dark:text-blue-300 font-bold hover:underline"
        >
          MITRE</a>.
      </h1>
    </div>
  </article>
</header>

<style>
header {
  @apply bg-background text-text dark:bg-background-dark dark:text-text-dark;
}

.intro-heading {
  @apply pt-4 text-2xl font-medium leading-relaxed text-text/90 dark:text-text-dark/90;
}

a.rounded-full {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40px; /* Adjust circle size */
  height: 40px; /* Adjust circle size */
}

a:hover i {
  transform: scale(1.1);
  transition: transform 0.3s;
}
</style>
