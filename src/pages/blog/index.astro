---
import BaseLayout from "../../layouts/Base.astro";
import { getCollection } from "astro:content";

const blogs = await getCollection("blog");

const title = "Blog";
const description = "Explore all blog posts written on various topics.";
---

<BaseLayout title={title}>
  <section class="blog-list container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Blog</h1>
    <ul class="space-y-6">
      {
        blogs.map((post) => (
          <li>
            <a 
              href={`/blog/${post.slug}`} 
              class="text-2xl font-semibold text-blue-500 hover:text-blue-700 hover:underline"
            >
              {post.data.title}
            </a>
            <p class="text-sm text-gray-400 mt-1">
              Published on {new Date(post.data.publishedAt).toLocaleDateString()}
            </p>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
